model Classes {
  id            String         @id @default(cuid())
  label         String         @unique
  section       String[]       @default(["a"])
  createdAt     DateTime       @default(now())
  updatedAt     DateTime
  schoolClasses School_Class[]
}

model School_Class {
  id        String   @id @default(cuid())
  class_id  String
  school_id String[]
  classes   Classes  @relation(fields: [class_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime
}
